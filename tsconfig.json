{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*"],
      "@apps/*": ["apps/*"],

      "@web/*": ["apps/web/*"],
      "@admin/*": ["apps/admin/*"],

      "@db": ["packages/db/index"],
      "@db/*": ["packages/db/*"],

      "@auth": ["packages/auth/index"],
      "@auth/*": ["packages/auth/*"],

      "@ui/*": ["packages/ui/*"],
      "@shadcn/*": ["packages/ui/components/ui/*"],

   
    }
  }
}
